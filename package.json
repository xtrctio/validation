{
  "name": "@xtrctio/validation",
  "description": "Validation constants and patterns for xtrct.io models",
  "version": "0.0.4",
  "author": "Eric Hacke",
  "bugs": {
    "url": "https://github.com/xtrctio/validation/issues"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@xtrctio/url-filter": "^0.1.0",
    "css-what": "^2.1.3",
    "validator": "^10.11.0"
  },
  "devDependencies": {
    "@xtrctio/eslint-config": "^2.0.7",
    "chai": "^4.1.2",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.3.1",
    "istanbul": "^0.4.5",
    "mocha": "^6.0.2",
    "nyc": "^13.3.0",
    "sinon": "^7.2.5"
  },
  "files": [
    "lib/**",
    "config/**",
    "app/**",
    "*.js",
    "!scratch.js"
  ],
  "homepage": "https://github.com/xtrctio/validation#readme",
  "husky": {
    "hooks": {
      "pre-commit": "LIST=`git diff-index --cached --name-only HEAD | grep '.*\\.js' | grep -v json`; if [ \"$LIST\" ]; then npm run lint && git add $LIST; fi"
    }
  },
  "keywords": [
    "constants",
    "validation",
    "xtrctio"
  ],
  "license": "MIT",
  "main": "index.js",
  "nyc": {
    "exclude": [
      "coverage/**",
      "tests/**",
      "scratch.js"
    ],
    "reporter": [
      "html",
      "text",
      "text-summary",
      "lcov"
    ],
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xtrctio/validation.git"
  },
  "scripts": {
    "lint": "eslint \"**/*.js\" --fix && fixpack",
    "test": "npm run unit && npm run lint",
    "unit": "nyc mocha --use_strict --exit \"tests/**/*.unit.js\""
  }
}
